<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/insultButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ишемический инсульт и профилактика сердечно-сосудистых заболеваний" />

            <Button
                android:id="@+id/intracranialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Внутричерепное кровоизлияние" />

            <Button
                android:id="@+id/subarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Субарахноидальное кровоизлияние. Шкала Ханта - Хесса" />

            <Button
                android:id="@+id/consButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Уровень сознания" />

            <Button
                android:id="@+id/headacheButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оценка головной боли по шкале MIDAS" />

            <Button
                android:id="@+id/algoverBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Индекс Альговера" />

            <Button
                android:id="@+id/idealBodyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Идеальная масса тела" />

            <Button
                android:id="@+id/skfCalcBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Калькулятор СКФ и клиренса креатинина" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>